{
	"name": "directus-monorepo",
	"private": true,
	"scripts": {
		"build": "pnpm --recursive --filter '!docs' run build",
		"format": "prettier --cache --check .",
		"dev": "NODE_ENV=development tsx ./api/src/start.ts",
		"init": "NODE_ENV=development tsx ./api/src/cli/run.ts bootstrap",
		"lint": "eslint --cache .",
		"test": "pnpm --recursive --filter '!tests-blackbox' test",
		"test:blackbox": "pnpm --filter directus deploy --prod dist && pnpm --filter tests-blackbox test"
	},
	"devDependencies": {
		"tsx": "3.12.7",
		"node-fetch": "3.3.2"
	},
	"packageManager": "pnpm@8.7.4",
	"engines": {
		"node": ">=16.20.0",
		"pnpm": "~8.6.10"
	}
}
